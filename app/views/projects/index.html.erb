
<table>
<% @projects.each do |project|%>



<div class="blog-post medium">

                <div class="row">
                  <div class="col-sm-8">
                    <div class="post-cover">
                      <a href="/projects/<%= project.id %>">
                        <img src="<%= project.project_images.first.url %>" alt="simple post cover" />
                      </a>
                    </div>
                  </div>
                 
                  <div class="col-sm-16">
                    <div class="post-header">
                      <p class="categories"><a href="/projects/<%= project.id %>">Fashion</a> / <a href="#">lifestyle</a></p>

                      <h2 class="post-title">
                        <a href="/projects/<%= project.id %>">Project Name : <i><%= project.name %></i></a>
                      </h2>

                      <ul class="post-meta">
                        <li class="date">Created: <%= project.created_at.to_formatted_s(:long) %></li>
                        <li class="author">by <a href="#"><%= project.user.first_name%>&nbsp<%= project.user.last_name %></a></li>
                        <li class="comments"><a href="#">Comments (1)</a></li>
                      </ul>
                    </div>

                    <div class="post-body">
                    <% project.instructions.each do |instruction| %>
                      <p><%= instruction.step_number %>, &nbsp<%= instruction.description
                       %></p>
                        <% end %>
                      <a href="/projects/<%= project.id %>" class="btn template-btn-2">Read more</a>
                    </div>
                  </div>
                </div>
             
             </div>
             <% end %>
          
          
            </table>
          